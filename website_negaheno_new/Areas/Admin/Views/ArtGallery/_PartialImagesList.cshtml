@using PagedList;
@using PagedList.Mvc;
@model IPagedList<string>
@{
    Layout = null;
}


@if (Model != null && Model.Count > 0)
{
        for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-sm-4 col-xs-12 top-buffer20 ">

                <div class="well well-image">

                    <div class="col-xs-12 nopadding">
                        <img src='@String.Concat("/Upload/",Model[i])' alt="gallery photo" class="gallery_img" />
                    </div>
                    <div class="col-xs-12 nopadding topbuffer-10">
                        <div class="col-xs-2 nopadding" >
                            @Html.Hidden("img_path", Model[i])
                            @Html.BootstrapButton("<i class='fa fa-trash fa-lg'></i>", "btn-trash", "btn_remove_image", HtmlCommonProperty.ButtonType.button, "Delete Image")
                        </div>
                        <div class="col-xs-1  nopadding">
                            @Html.BootstrapButton("<i class='glyphicon glyphicon-zoom-in'></i>", "btn-zoom", "btn_zoom_image", HtmlCommonProperty.ButtonType.button, "Zoom Image")
                        </div>
                    </div>
                </div>



            </div>
        }

        if (Model != null && Model.PageCount > 1)
        {

            <div class="col-xs-12 text-center">
                @Html.PagedListPager(Model, page => Url.Action("Images", new  { page= page})
               , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                new PagedListRenderOptions
                {
                    DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
                    DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
                    LinkToFirstPageFormat = "First",
                    LinkToLastPageFormat = "Last",
                    MaximumPageNumbersToDisplay = 10,
                    DisplayEllipsesWhenNotShowingAllPageNumbers = true,
                    EllipsesFormat = "&#8230;"
                },
                new AjaxOptions
                {
                    HttpMethod = "GET",
                    UpdateTargetId = "div_images",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "Success_paging_images"
                }))
            </div>

        }
}
else
{
    <div class="col-xs-12 nopadding top-buffer20">
        <div class="well well-sm ">
            No Photo for this gallery is uploaded.
        </div>
    </div>
}
