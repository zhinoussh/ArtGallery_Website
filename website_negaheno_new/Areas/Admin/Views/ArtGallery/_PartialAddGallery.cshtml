@model website_negaheno.Areas.Admin.ViewModels.ArtGalleryViewModel
@{
    Layout = null;
}

@using (Ajax.BeginForm("Insert_New_Gallery", "ArtGallery", new { area = "Admin" }
    , new AjaxOptions
    {
        HttpMethod = "Post",
        OnSuccess = "Success_add_gallery"
    }
))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.GalleryId)
    @Html.HiddenFor(model => model.filter_page.page)
    @Html.HiddenFor(model => model.filter_page.filter)
    
    <div class="modal-header modal-header-info">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <i class="glyphicon glyphicon-plus"></i> Add New Gallery
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-xs-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-12">
                @Html.LabelFor(model => model.fa_title)
            </div>
            <div class="col-xs-12">
                @Html.TextBoxFor(model => model.fa_title, new { @class = "form-control rtl-control" })
                @Html.ValidationMessageFor(model => model.fa_title,"", new { @class = "text-danger" })
            </div>

            <div class="col-xs-12 topbuffer-20">
                <div class="col-xs-1 nopadding topbuffer-10">
                    @Html.LabelFor(model => model.fromDate)
                </div>
                <div class="col-xs-3 nopadding">
                    @Html.AddOnTextBoxFor(model => model.fromDate, "fromDate", "btn_fromDate", "btn-calendar", "<i class='fa fa-calendar'></i>")
                </div>

                <div class="col-xs-1 topbuffer-10">
                    @Html.LabelFor(model => model.toDate)
                </div>
                <div class="col-xs-3 nopadding">
                    @Html.AddOnTextBoxFor(model => model.toDate, "toDate", "btn_toDate", "btn-calendar", "<i class='fa fa-calendar'></i>")
                </div>
              
            </div>
            <div class="col-xs-12 topbuffer-20">
                <div class="col-xs-1 nopadding topbuffer-10">
                    @Html.LabelFor(model => model.fromHour)
                </div>
                <div class="col-xs-3 nopadding">
                    @Html.AddOnTextBoxFor(model => model.fromHour, "fromHour", "text-center", "", "", "btn-calendar", "<i class='glyphicon glyphicon-time'></i>")
                    @Html.ValidationMessageFor(model => model.fromHour, "", new { @class = "text-danger" })
                </div>

                    <div class="col-xs-1 topbuffer-10">
                        @Html.LabelFor(model => model.toHour)
                    </div>
                <div class="col-xs-3 nopadding">
                    @Html.AddOnTextBoxFor(model => model.toHour, "toHour","text-center","","", "btn-calendar", "<i class='glyphicon glyphicon-time'></i>")
                    @Html.ValidationMessageFor(model => model.toHour, "", new { @class = "text-danger" })
                </div>
                </div>
                <div class="col-xs-12 topbuffer-20">
                    @Html.LabelFor(model => model.eng_title)
                </div>
                <div class="col-xs-12">
                    @Html.TextBoxFor(model => model.eng_title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.eng_title,"", new { @class = "text-danger" })
                </div>

                <div class="col-xs-12 topbuffer-20">
                    @Html.LabelFor(model => model.description)
                </div>
                <div class="col-xs-12">
                    @Html.TextAreaFor(model => model.description, new { @class = "form-control rtl-control" ,style="min-height:120px"})
                </div>


            </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-info">Save</button>
    </div>
}